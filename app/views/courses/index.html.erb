<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table id='title' class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Code</th>
      <th>Teacher</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td class="td" id="td"><%= course.title %></td>
        <td><%= course.code %></td>
        <td><%= course.teacher %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td> 
          <button type = "button" onclick="addLike(<%= course.id %>)" id = "heart<%= course.id %>" class="btn btn-link" value="<%= course.isLike(current_person.id) %>">
            <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
          </button> 
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path, class: "btn btn-info" %>
